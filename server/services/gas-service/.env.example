# Gas Service Environment Variables

# Server Configuration
PORT=3003
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/suvidha_gas

# JWT Configuration
JWT_SECRET=suvidha-secret-key
JWT_EXPIRE=7d

# Auth Service Configuration
AUTH_SERVICE_URL=http://localhost:3001

# Payment Service Configuration
PAYMENT_SERVICE_URL=http://localhost:3006

# Notification Service Configuration (Optional)
NOTIFICATION_SERVICE_URL=http://localhost:3008

# File Upload Configuration (For complaint attachments)
MAX_FILE_SIZE=5MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Gas Agency Configuration
DEFAULT_AGENCY_ID=GA001
DEFAULT_AGENCY_NAME=SUVIDHA Gas Distribution

# Pricing Configuration (Base prices in INR)
SUBSIDIZED_14_2_PRICE=850
NON_SUBSIDIZED_14_2_PRICE=1100
COMMERCIAL_14_2_PRICE=1200
SUBSIDY_PERCENTAGE=30
DELIVERY_CHARGE_SMALL=30
DELIVERY_CHARGE_LARGE=50

# Business Rules
MAX_MONTHLY_SUBSIDIZED_CYLINDERS=1
MAX_ANNUAL_SUBSIDIZED_CYLINDERS=12
MAX_BOOKING_QUANTITY=12
AUTO_ESCALATION_HOURS=24

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=dev
LOG_FILE_PATH=./logs/gas-service.log