{
  "name": "suvidha-kiosk",
  "version": "1.0.0",
  "description": "Government Services Kiosk Platform",
  "private": true,
  "workspaces": [
    "client",
    "server/*",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:services && npm run install:client",
    "install:services": "cd services && for d in */; do cd \"$d\" && npm install && cd ..; done",
    "install:client": "cd client && npm install",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:services\"",
    "dev:client": "cd client && npm run dev",
    "dev:services": "docker-compose up",
    "dev:all": "npm run dev",
    "build": "npm run build:client && npm run build:services",
    "build:client": "cd client && npm run build",
    "build:services": "docker-compose build",
    "test": "npm run test:client && npm run test:services",
    "test:client": "cd client && npm run test",
    "test:services": "npm run test:all-services",
    "test:all-services": "for dir in server/*/; do (cd \"$dir\" && npm test); done",
    "test:integration": "jest --config tests/integration/jest.config.js",
    "test:e2e": "playwright test",
    "test:coverage": "npm run test -- --coverage",
    "lint": "npm run lint:client && npm run lint:services",
    "lint:client": "cd client && npm run lint",
    "lint:services": "eslint 'server/**/*.js'",
    "lint:fix": "npm run lint:client -- --fix && npm run lint:services -- --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md,yml,yaml}\"",
    "type-check": "cd client && npm run type-check",
    "setup:env": "node scripts/setup-env.js",
    "db:migrate": "node scripts/db-migrate.js",
    "db:seed": "node scripts/db-seed.js",
    "db:reset": "bash scripts/db-reset.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "start:all": "bash scripts/start-all-services.sh",
    "stop:all": "docker-compose down",
    "clean": "rm -rf node_modules client/node_modules server/*/node_modules && rm -rf client/dist server/*/dist",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/suvidha-kiosk.git"
  },
  "keywords": [
    "government-services",
    "kiosk",
    "e-governance",
    "digital-india",
    "microservices"
  ],
  "author": "SUVIDHA Development Team",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
